<view class="page" data-tyui-theme="{{theme}}">
  <view class="page__hd">
    <view class="page__title">Msg</view>
    <view class="page__desc">提示页</view>
  </view>
  <view class="page__bd">
    <view class="tyui-btn-area l-r-padding">
      <button type="primary" class="base-btn" bindtap="openSuccess">成功提示页</button>
      <button type="primary" class="base-btn" bindtap="openFail">失败提示页</button>
      <button type="primary" class="base-btn" bindtap="openText">无图标提示页</button>
      <button type="primary" class="base-btn" bindtap="openTextPrimary">无图标提示页</button>
    </view>
  </view>
</view>