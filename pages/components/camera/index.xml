<view class="page-body">
  <camera
    style="width: 100%; height:300px;"
    resolution="high"
    device-position="{{devicePosition}}"
    flash="{{flash}}"
    frame-size="large"
    bindstop="stop"
    binderror="error"
    bindinitdone="initdone"
  ></camera>
  <view class="btn-area">
    <button class="page-body-button" type="primary" bindtap="takePhoto">takePhoto API</button>
    <button class="page-body-button" type="primary" bindtap="setZoom">setZoom API</button>
    <button class="page-body-button" type="primary" bindtap="devicePositionCHnage">device-position {{i18n.t('camera_props')}}</button>
    <button class="page-body-button" type="primary" bindtap="flashChange">flash {{i18n.t('camera_props')}}</button>
    <view>{{i18n.t('camera_view_pic')}}:</view>
    <image ty:if="{{src}}" mode="widthFix" src="{{src}}"></image>
  </view>
</view>